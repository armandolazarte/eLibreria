{% extends 'RGMELibreriaIndexBundle::base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block contenedor %}
		{% block cabecera %}
		<header id="barra">
			<nav id="barra_nav" class="desaparece">
				{% include 'RGMELibreriaIndexBundle::menu_cabecera.html.twig' %}
			</nav>		
			
			<h1 class="desaparece">{{ titulo }}</h1>
			
			<aside class="conectado desaparece">
				Conectado como: 
			</aside>
		</header>
		{% endblock %}
		
		{% block cuerpo %}
		<section id="cuerpo">
			{% block buscar %}
			<input type="text" class="busqueda" id="busqueda" placeholder="Buscar">
			{% endblock %}
			
			{% block seccion_titulo %}
			<hgroup>
				<h1 class="seccion">{% block sec_tit_titulo %}{{ seccion }}{% endblock %}</h1>
				<h2 class="subseccion">{% block sec_tit_subtitulo %}{{ subseccion }}{% endblock %}</h2>
			</hgroup>
			{% endblock %}
			
			{% block seccion_menu %}
			<aside class="menu">
				{% block seccion_menu_include %}
					{% if menu_seccion %}
						{% include menu_seccion %}
					{% else %}
						{% include 'RGMELibreriaIndexBundle::menu_izq.html.twig' %}
					{% endif %}
				{% endblock %}
			</aside>
			{% endblock %}
			
			{% block article_contenido %}
				<article id="contenido">
					{% block contenido %}{% endblock %}
				</article>
			{% endblock %}
		</section>
		{% endblock %}
{% endblock %}