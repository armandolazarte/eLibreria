{% extends 'RGMELibreriaIndexBundle::layout.html.twig' %}

{% block contenido %}
<div id="marco">
	<div id="cuerpo_marco">
		{% if formulario %}
		<form method="POST" action="{{ path('rgm_e_libreria_suministro_albaran_importar') }}" {{ form_enctype(formulario) }}>
		{{ form_widget(formulario) }}
		<input type="submit">
		</form>
		{% endif %}
		
		{% if numEjemplaresCreados %}
		<div>
			<h1>Ejemplares creados: {{ numEjemplaresCreados }}</h1>
		</div>
		{% endif %}
		
		{% if albaranesSinCrear %}
		<div>
			<h1>Albaranes por crear:</h1>
			<ul>
			{% for albaran in albaranesSinCrear %}
				<li>{{ albaran }}</li>
			{% endfor %}
			</ul>
			(Ejecutar la importacion una vez creados)
		</div>
		{% endif %}
	</div>
</div>
{% endblock %}